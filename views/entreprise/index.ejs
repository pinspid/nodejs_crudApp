<%- include('../layout/header') %> 
    <div class="row">
        <div class="col md-9">
            <h3>Entreprise List</h3>
        </div>
        <div class="col-md-3">
            <a name="newEntreprise" id="newEntreprise" class="btn btn-primary" href="/entreprise/create/" role="button">New Entreprise</a>
        </div>
    </div>
    <hr>
    <div class="row mt-5">
        <div class="col-md-8 m-auto">
            <table class="table table-hover table-inverse text-center">
                <thead class="thead-inverse">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% if (entreprises) { %>
                            <% for(let entreprise of entreprises) { %>
                                <tr>
                                    <td><%= entreprise.id %> </td>
                                    <td><%= entreprise.name %> </td>
                                    <td>
                                        <form action="/entreprise/<%= entreprise.id %>?_method=DELETE" method="post">
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
            </table>
        </div>
    </div>
<%- include('../layout/footer') %> 